INCLUDE (StringToInternalBool)
MACRO (FINDVSNPRINTF)
  #
  # Dependencies
  #
  STRINGTOINTERNALBOOL(_HAVE_STDIO_H HAVE_STDIO_H)
  STRINGTOINTERNALBOOL(_HAVE_STDARG_H HAVE_STDARG_H)
  #
  # Test
  #
  FOREACH (KEYWORD "vsnprintf" "_vsnprintf" "__vsnprintf")
    MESSAGE(STATUS "Looking for ${KEYWORD}")
    TRY_COMPILE (C_HAS_${KEYWORD} ${CMAKE_CURRENT_BINARY_DIR}
      ${CMAKE_CURRENT_SOURCE_DIR}/cmake/vsnprintf.c
      COMPILE_DEFINITIONS "-DC_VSNPRINTF=${KEYWORD} -DHAVE_STDIO_H=${_HAVE_STDIO_H} -DHAVE_STDARG_H=${_HAVE_STDARG_H}")
    IF (C_HAS_${KEYWORD})
      MESSAGE(STATUS "Looking for ${KEYWORD} - found")
      SET (C_VSNPRINTF ${KEYWORD})
      BREAK ()
    ENDIF ()
  ENDFOREACH ()
ENDMACRO ()
IF (NOT C_VSNPRINTF)
  FINDVSNPRINTF ()
  SET (C_VSNPRINTF "${C_VSNPRINTF}" CACHE STRING "C VSNPRINTF")
  MARK_AS_ADVANCED (C_VSNPRINTF)
ENDIF (NOT C_VSNPRINTF)
